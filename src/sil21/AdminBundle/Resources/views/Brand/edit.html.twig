{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 class="text-center" >{{ 'brand.entity'|transchoice(1, {}, 'AdminBundle') }}
		<small >{{ brand.name }}</small >
	</h1 >
	
	{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
	{{ form_start(edit_form) }}
	{{ form_widget(edit_form) }}
	<button type="submit" class="btn btn-primary" >{{ 'form.edit'|trans({}, 'AdminBundle') }}</button >
	<button type="reset" class="btn btn-default" >{{ 'form.cancel'|trans({}, 'AdminBundle') }}</button >
	{{ form_end(edit_form) }}
	
	<ul >
		<li >
			<a href="{{ path('brand_index') }}" >Back to the list</a >
		</li >
		<li >
			{{ form_start(delete_form) }}
			<button type="submit" >{{ 'form.delete'|trans({}, 'AdminBundle') }}</button >
			{{ form_end(delete_form) }}
		</li >
	</ul >
{% endblock %}
