{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 class="text-center" >{{ 'brand.entity'|transchoice( 2, {}, 'AdminBundle') }}
		<a href="{{ path('brand_new') }}" class="btn btn-primary" ><span class="glyphicon glyphicon-plus" ></span ></a >
	</h1 >
	
	<article  class="noPaddingSide">
		<table class="stylized" >
			<tr >
				<th >Id</th >
				<th >{{ 'brand.name'|trans({}, 'AdminBundle') }}</th >
				<th >{{ 'form.action'|trans({}, 'AdminBundle') }}</th >
			</tr >
			{% for brand in brands %}
				<tr >
					<td >
						<a href="{{ path('brand_show', { 'id': brand.id }) }}" >{{ brand.id }}</a >
					</td >
					<td >{{ brand.name }}</td >
					<td >
						<a href="{{ path('brand_show', { 'id': brand.id }) }} " class="btn btn-primary btn-xs" >{{ 'form.see'|trans({}, 'AdminBundle') }}</a >
						<a href="{{ path('brand_edit', { 'id': brand.id }) }}" class="btn btn-primary btn-xs" >{{ 'form.edit'|trans({}, 'AdminBundle') }}</a >
					</td >
				</tr >
			{% endfor %}
		</table >
	</article >
{% endblock %}
