{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 class="text-center" >{{ 'brand.entity'|transchoice(1, {}, 'AdminBundle') }}
		<small >{{ brand.name }}</small >
		<a href="{{ path('brand_edit', { 'id': brand.id }) }}" class="btn btn-primary" ><span class="glyphicon glyphicon-pencil" ></span ></a >
	</h1 >
	
	<article class="noPaddingSide">
		<table class="stylized" >
			<tr >
				<th >Id</th >
				<th >{{ 'brand.name'|trans({}, 'AdminBundle') }}</th >
			</tr >
			<tr >
				<td >{{ brand.id }}</td >
				<td >{{ brand.name }}</td >
			</tr >
		</table >
	</article >
	
	<ul >
		<li >
			<a href="{{ path('brand_index') }}" >Back to the list</a >
		</li >
		<li >
			{{ form_start(delete_form) }}
			<button type="submit" >{{ 'form.delete'|trans({}, 'AdminBundle') }}</button >
			{{ form_end(delete_form) }}
		</li >
	</ul >
{% endblock %}
