{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 class="text-center">{{ 'category.entity'|transchoice(1, {}, 'AdminBundle') }}
		<small>{{ category.name }}</small>
		<a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary" ><span class="glyphicon glyphicon-pencil" ></span ></a >
	</h1 >

	<article class="noPaddingSide" >
		<table class="stylized" >
			<tr >
				<th >Id</th >
				<th >{{ 'category.name'|trans({}, 'AdminBundle') }}</th >

			</tr >
			<tr >
				<td >{{ category.id }}</td >
				<td >{{ category.name }}</td >
			</tr >
		</table >
	</article >

	<ul >
		<li >
			<a href="{{ path('category_index') }}" >Back to the list</a >
		</li >
		<li >
			{{ form_start(delete_form) }}
			<button type="submit" >{{ 'form.delete'|trans({}, 'AdminBundle') }}</button >
			{{ form_end(delete_form) }}
		</li >
	</ul >
{% endblock %}
