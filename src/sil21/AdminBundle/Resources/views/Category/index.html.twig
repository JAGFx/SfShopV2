{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 class="text-center">{{ 'category.entity'|transchoice(2, {}, 'AdminBundle') }}
		<a href="{{ path('category_new') }}" class="btn btn-primary" ><span class="glyphicon glyphicon-plus" ></span ></a >
	</h1 >
	
	<article class="noPaddingSide" >
		<table class="stylized" >
			<tr >
				<th >Id</th >
				<th >{{ 'category.name'|trans({}, 'AdminBundle') }}</th >
				<th >{{ 'form.action'|trans({}, 'AdminBundle') }}</th >
			</tr >
			{% for category in categories %}
				<tr >
					<td >
						<a href="{{ path('category_show', { 'id': category.id }) }}" >{{ category.id }}</a >
					</td >
					<td >{{ category.name }}</td >
					<td >
						<a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-primary btn-xs" >{{ 'form.see'|trans({}, 'AdminBundle') }}</a >
						<a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary btn-xs" >{{ 'form.edit'|trans({}, 'AdminBundle') }}</a >
					</td >
				</tr >
			{% endfor %}
		</table >
	</article >
{% endblock %}
