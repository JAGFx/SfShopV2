{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 class="text-center">{{ 'category.entity'|transchoice( 1, {}, 'AdminBundle') }} <small>{{ category.name }}</small></h1 >
	
	{{ form_start(edit_form) }}
	{{ form_widget(edit_form) }}
	<button type="submit" class="btn btn-primary">{{ 'form.create'|trans({}, 'AdminBundle') }}</button >
	<button type="reset" class="btn btn-default">{{ 'form.cancel'|trans({}, 'AdminBundle') }}</button >
	{{ form_end(edit_form) }}
	
	<ul >
		<li >
			<a href="{{ path('category_index') }}" >Back to the list</a >
		</li >
		<li >
			{{ form_start(delete_form) }}
			<button type="submit" >{{ 'form.delete'|trans({}, 'AdminBundle') }}</button >
			{{ form_end(delete_form) }}
		</li >
	</ul >
{% endblock %}
