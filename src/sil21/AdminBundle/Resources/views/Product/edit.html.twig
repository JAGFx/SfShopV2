{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 class="text-center">{{ 'product.entity'|transchoice(1, {}, 'AdminBundle') }} <small>{{ product.name }}</small></h1 >

	{{ form_start(edit_form) }}
	{{ form_widget(edit_form) }}
	<button type="submit" class="btn btn-primary" >{{ 'form.edit'|trans({}, 'AdminBundle') }}</button >
	<button type="reset" class="btn btn-default" >{{ 'form.cancel'|trans({}, 'AdminBundle') }}</button >
	{{ form_end(edit_form) }}

	{% if product.image is not empty %}
		{{ form_start(delete_image_form) }}
		<button type="submit" title="Supprimer l'image" class="btn btn-primary" >{{ 'product.delete_file'|trans({}, 'AdminBundle') }}</button >
		{{ form_end(delete_image_form) }}
	{% endif %}

	<ul >
		<li >
			<a href="{{ path('product_index') }}" >Back to the list</a >
		</li >
		<li >
			{{ form_start(delete_form) }}
			<button type="submit" >{{ 'form.delete'|trans({}, 'AdminBundle') }}</button >
			{{ form_end(delete_form) }}
		</li >
	</ul >
{% endblock %}
