{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 class="text-center" >{{ 'client.entity'|transchoice(2, {}, 'AdminBundle') }}</h1 >

	<article class="noPaddingSide" >
		<table class="stylized" >
			<tr >
				<th >ID</th >
				<th >{{ 'client.roles'|trans({}, 'AdminBundle') }}</th >
				<th >{{ 'client.name'|trans({}, 'AdminBundle') }}</th >
				<th >{{ 'client.firstname'|trans({}, 'AdminBundle') }}</th >
				<th >{{ 'client.email'|trans({}, 'AdminBundle') }}</th >
				<th >{{ 'form.action'|trans({}, 'AdminBundle') }}</th >
			</tr >
			{% for client in listClients %}
				<tr >
					<td >{{ client.id }}</td >
					<td >{{ client.roles|json_encode }}</td >
					<td >{{ client.name }}</td >
					<td >{{ client.firstname }}</td >
					<td >{{ client.email }}</td >
					<td >
						<a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary btn-xs" >{{ 'form.edit'|trans({}, 'AdminBundle') }}</a >
					</td >
				</tr >
			{% endfor %}
		</table >
	</article >
{% endblock %}