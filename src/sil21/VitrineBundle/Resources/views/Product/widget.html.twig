<article class="col-xs-12 product" >
	<div class="col-md-2 picture" >
		<img src="{{ vich_uploader_asset(product, 'image') }}" class="img-responsive" />
	</div >
	<div class="col-md-7" >
		<div class="topArticle col-xs-12" >
			<h3 >{{ product.name }} <span class="label label-primary" >{{ product.category.name }}</span ></h3 >
			<p >{{ product.description }}</p >
		</div >
	</div >
	<div class="rightArticle flexbox col-md-3" >
		<div class="flex-item price" >
			{{ product.priceSavedAmount|number_format(2, ',', ' ') }} â‚¬
			{% if product.savedAmount != 0  %}
				<span class="label label-danger">-{{ product.savedAmount * 100 }}%</span>
			{% endif %}
		</div >
		<div class="flex-item stockProduct {% if product.onStock %}available{% else %}unavailable{% endif %}" >
			<span >{% if product.onStock %}En stock{% else %}Rupture{% endif %}</span >
		</div >
		<div class="flex-item addCart" >
			{% if product.onStock %}
				<a href="{{ path("sil21_addArticle", { id: product.id } ) }}" class="btn btn-primary" ><span class="glyphicon glyphicon-shopping-cart" ></span ></a >
			{% else %}
				<button class="btn btn-primary disabled" disabled><span class="glyphicon glyphicon-shopping-cart" ></span ></button>
			{% endif %}
		</div >
	</div >
</article >