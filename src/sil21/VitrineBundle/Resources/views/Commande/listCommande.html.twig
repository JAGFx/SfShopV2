{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 >Commandes</h1 >

	<article class="noPaddingSide" >
		<table class="stylized" >
			<tr >
				<th >Id</th >
				<th >Date</th >
				<th >Etat</th >
				<th >Actions</th >
			</tr >
			{% for commande in commandes %}
				<tr >
					<td ><a href="{{ path('commande_show', { 'id': commande.id }) }}" >{{ commande.id }}</a ></td >
					<td >{% if commande.date %}{{ commande.date|date('Y-m-d H:i:s') }}{% endif %}</td >
					<td >{{ commande.etat }}</td >
					<td >
						<ul >
							<li >
								<a href="{{ path('commande_show', { 'id': commande.id }) }}" >show</a >
							</li >
							<li >
								<a href="{{ path('commande_edit', { 'id': commande.id }) }}" >edit</a >
							</li >
						</ul >
					</td >
				</tr >
			{% endfor %}
		</table >
	</article >
{% endblock %}