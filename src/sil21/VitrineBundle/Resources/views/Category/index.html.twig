{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 >Cat√©gories
		<a href="{{ path('category_new') }}" class="btn btn-primary" ><span class="glyphicon glyphicon-plus" ></span ></a >
	</h1 >
	
	<article class="noPaddingSide" >
		<table class="stylized" >
			<tr >
				<th >Id</th >
				<th >Name</th >
				<th >Actions</th >
			</tr >
			{% for category in categories %}
				<tr >
					<td >
						<a href="{{ path('category_show', { 'id': category.id }) }}" >{{ category.id }}</a >
					</td >
					<td >{{ category.name }}</td >
					<td >
						<a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-primary btn-xs" >Voir</a >
						<a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary btn-xs" >Modifier</a >
					</td >
				</tr >
			{% endfor %}
		</table >
	</article >
{% endblock %}
