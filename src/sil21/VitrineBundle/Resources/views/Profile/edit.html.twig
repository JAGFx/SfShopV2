{% extends "::layout.html.twig" %}
{% set showLeftMenu = 'no' %}

{% block content %}
	<h1 class="text-center" >Modification de profil</h1 >
	
	{% form_theme form 'bootstrap_3_layout.html.twig' %}
	<form class="fos_user_profile_edit" action="{{ path('fos_user_profile_edit') }}" method="POST">
		{{ form_widget(form) }}
		<div class="text-right">
			<button type="submit" class="btn btn-primary">{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}</button >
			<button type="reset" class="btn btn-default">Annuler</button >
		</div>
	</form>
{% endblock %}