{% extends '::layout.html.twig' %}

{% set showLeftMenu = 'no' %}
{% block content %}
	<h1 class="text-center" >Commande
		<small > N°{{ order.id }}</small >
		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('order_edit', { 'id': order.id }) }}" class="btn btn-primary" ><span class="glyphicon glyphicon-pencil" ></span ></a >
		{% endif %}
	</h1 >

	<article class="noPaddingSide" >
		<table class="stylized" >
			<tr >
				<th >Etat</th >
				<td >{{ order.etat(true) }}</td >
			</tr >
			<tr >
				<th >Date</th >
				<td >{% if order.date %}{{ order.date|date('d/m/Y') }}{% endif %}</td >
			</tr >
		</table >
	</article >

	<h3 class="text-center" >Produits</h3 >
	<article class="noPaddingSide panier" >
		<table class="stylized" >
			<tr >
				<th ></th >
				<th >Nom</th >
				<th >Quantité</th >
				<th >Prix</th >
			</tr >
			{% for orderItem in order.orderItems %}
				<tr class="cartProduct" >
					<td >
						<img src="{{ asset("uploads/products/" ~ orderItem.product.image) }}" class="img-responsive" >
					</td >
					<td class="infoProduct" >
						<h3 >{{ orderItem.product.name }}</h3 >
					</td >
					<td >{{ orderItem.qte }}</td >
					<td class="price" >{{ (orderItem.qte * orderItem.price)|number_format(2, ',', ' ') }} €</td >
				</tr >
			{% endfor %}
			<tr class="mainColorAcent" >
				<td colspan="3" ></td >
				<td class="price" >
					<small >TOTAL:</small >
					<br />
					{{ order.total|number_format(2, ',', ' ') }} €
				</td >
			</tr >
		</table >
	</article >

	<ul >
		{% if is_granted('ROLE_ADMIN') %}
			<li >
				<a href="{{ path('order_listUser') }}" >Back to the list</a >
			</li >
			<li >
				{{ form_start(delete_form) }}
				<input type="submit" value="Delete" >
				{{ form_end(delete_form) }}
			</li >

		{% else %}
			<li >
				<a href="{{ path('order_listUser') }}" >Back to the list</a >
			</li >
		{% endif %}
	</ul >
{% endblock %}
